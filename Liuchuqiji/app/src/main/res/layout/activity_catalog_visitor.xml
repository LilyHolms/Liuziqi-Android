<?xml version="1.0" encoding="utf-8"?>
<!--4游客界面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.softwareprojectmanagement.liuziqi.lily.ui.MainActivity"
    android:weightSum="10"
    android:background="@drawable/ic_visitor_background"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:gravity="right"

        >

        <Button
            android:id="@+id/btn_to_login"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_visitor_btn_login"

            />

        <Button
            android:id="@+id/btn_to_register"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_visitor_btn_register"

            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center"

        >
        <Button
            android:id="@+id/btn_to_ManComputer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_visitor_btn_pve"
            />
        <Button
            android:id="@+id/btn_to_ManMan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_visitor_btn_pvp"
            />
        <Button
            android:id="@+id/btn_to_Rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_visitor_btn_rule"
            />
    </LinearLayout>
</LinearLayout>